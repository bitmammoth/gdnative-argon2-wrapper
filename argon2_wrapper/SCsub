Import('env')

module_env = env.Clone()

#Comment this line to build for Godot 3.2.3
module_env.Append(CPPDEFINES=["GODOT4"])

env.Append(LIBPATH=["#thirdparty/argon2/lib"])
env.Append(LIBS=['argon2'])

src_list = ["argon2_wrapper.cpp", "register_types.cpp"]
module_env.add_source_files(module_env.modules_sources, src_list)

module_env.Append(CPPPATH=["#thirdparty/argon2/include"])


module_env.Append(CCFLAGS=['-O2'])
module_env.Append(CXXFLAGS=['-std=c++11'])
